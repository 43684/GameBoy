<?xml version="1.0" encoding="utf-8"?>
<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg">
    <!-- Back face of the box -->
    <rect x="50" y="50" width="100" height="100" fill="blue" />

    <!-- Front face of the box -->
    <polygon points="50,50 150,50 100,0 0,0" fill="lightblue" />

    <!-- Right face of the box -->
    <polygon points="150,50 150,150 100,200 100,0" fill="darkblue" />

    <!-- Top face of the box -->
    <polygon points="50,50 100,0 0,0 50,50" fill="cyan" />
</svg>
